{
  "name": "landroid-card",
  "version": "1.0.6",
  "description": "Robot lawnmower card for Home Assistant",
  "main": "dist/landroid-card.js",
  "type": "module",
  "scripts": {
    "start": "rollup -c --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "build": "del /q dist\\*.* && rollup -c",
    "test": "npm run lint && npm run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-hubberke/landroid-card.git"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "landroid"
  ],
  "author": "git-hubberke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/git-hubberke/landroid-card/issues"
  },
  "homepage": "https://github.com/git-hubberke/landroid-card#readme",
  "dependencies": {
    "core-js": "^3.38.1",
    "custom-card-helpers": "^1.9.0",
    "ha-template": "^1.2.2",
    "lit": "^3.0.0",
    "lodash.get": "^4.4.2",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-runtime": "^7.25.4",
    "@babel/preset-env": "^7.25.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-image": "^3.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "postcss": "^8.4.41",
    "postcss-preset-env": "^10.0.2",
    "prettier": "^3.3.3",
    "rollup": "^4.21.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.1.0",
    "rollup-plugin-serve": "^1.0.0",
    "semantic-release": "^24.1.0",
    "semver": "~7.6.3"
  },
  "overrides": {},
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "*.js": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/landroid-card.js",
              "label": "landroid-card.js"
            }
          ]
        }
      ],
      "@semantic-release/git"
    ]
  }
}
